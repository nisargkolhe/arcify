{
  "name": "arcify",
  "version": "3.1.0",
  "description": "A sidebar extension that replicates Arc browser's tab management system",
  "type": "module",
  "scripts": {
    "dev": "vite build --config vite.config.dev.js --watch",
    "build": "vite build",
    "build:zip": "vite build && npm run zip",
    "zip": "node scripts/zip.js",
    "preview": "vite preview",
    "clean": "rm -rf dist dist-dev *.zip",
    "info": "node scripts/build-info.js",
    "release": "node scripts/release.js"
  },
  "devDependencies": {
    "vite": "^6.0.0",
    "vite-plugin-web-extension": "^4.4.3",
    "archiver": "^6.0.1",
    "fs-extra": "^11.2.0"
  },
  "keywords": [
    "chrome-extension",
    "tabs",
    "arc-browser",
    "productivity"
  ],
  "author": "Nisarg Kolhe",
  "license": "GPL-3.0"
}
